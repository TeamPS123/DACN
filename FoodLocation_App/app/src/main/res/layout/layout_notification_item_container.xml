<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/_8sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_8sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginEnd="@dimen/_12sdp"
        android:textSize="@dimen/_11ssp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/TextPrimary"
        android:text="Yêu cầu  đặt bàn ở nhà hàng Hội Ngộ đã hoàn tất"
        app:layout_constraintStart_toEndOf="@id/imageView"
        app:layout_constraintTop_toTopOf="@id/imageView"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textViewContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:textSize="@dimen/_9ssp"
        android:textColor="@color/TextColorSub"
        android:text="Cảm ơn bạn đã sử dụng dịch vụ của chúng tôi. Hãy chia sẻ trải nghiệm của bạn về đơn hàng để giúp những Khách hàng khác có thể tham khảo nhé!"
        app:layout_constraintStart_toStartOf="@id/textViewTitle"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textViewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25/11/2021 21:01"
        android:layout_marginTop="@dimen/_2sdp"
        android:textSize="@dimen/_9ssp"
        app:layout_constraintTop_toBottomOf="@id/textViewContent"
        app:layout_constraintStart_toStartOf="@id/textViewContent"/>

</androidx.constraintlayout.widget.ConstraintLayout>